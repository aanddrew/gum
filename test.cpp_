#include <iostream>

#include "math/Math.h"
#include "Object3D.h"

int main() {
    gum::Object3D root;

    gum::Vec4 position( 1, 0, 0, 1 );
    gum::Mat4 rotation = gum::Mat4::rotate(gum::Vec3(1/sqrt(2), 1/sqrt(2), 0), M_PI*2);
    std::cout << (rotation * position) << std::endl;

    gum::Mat4 trans_1 = gum::Mat4::translate(gum::Vec3(2,1,2));
    gum::Mat4 trans_2 = gum::Mat4::translate(gum::Vec3(-2,-1,-2));

    std::cout << trans_1 * trans_2 << std::endl;
}
